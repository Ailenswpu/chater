#input-area{
	background-color:#E0E0E0;
	position:fixed;
	bottom:0;
	left:0;
	width: 100%;
	height: 120px;
}


#input-area textarea{
	margin-left: 100px;
	height: 100px;
	width: 400px;
	float: left;
}

#input-area #submit{
	margin-top: 70px;
	margin-left: 23px;
	float: left;
}

#input-area .notice{
	margin-left: 20px;
	float: left;
	margin-top: 75px;
}

.messages{
	margin-top:57px;
/*	background-color: #08c;*/
  width: 100%;
  border-radius:10px;
  overflow:auto;
  background: rgba(20%, 50%, 80%, 0.9);
}


.messages li{
	list-style-type:none;
	width: 100%;
	border-bottom: 1px solid #DDD;
  margin-top: 3px;
  float: left;

}

.span2 .well{
	width: 100%;
	margin-top:55px; 
	height: auto;
}

.span2 h3{
	font-size: 15px;
}

.my_border{
	margin-left: 20px;
	margin-bottom: 00px;
	margin-right: 10px;
	overflow:auto;
}

.submit{
	font-size: 12px;
	font-family: '微软雅黑';
	
}

.messages li .user-avatar img{
	width: 60px;
	height: 60px;
	padding: 5px;
	border-radius: 20px;
}

.messages li .info{
	color: #fff;
	float: left;
	padding-left: 70px;
	margin-top: -60px;
	width: 80%;
}


.info span{
	margin-left: 10px;
}

.info p {
	margin-left: 10px;
}

.welcome-message{
	margin-top: 0px;
}

.welcome-message font{
	color: #08C;
  font-weight:bold;
}

.room_list{
	width: 20%;
	display: block;
  padding: 4px;
  height:180px;
  position:relative;
  line-height: 1;
  background: rgba(255, 255, 255, 0.7);
  overflow:hidden;
  text-overflow:ellipsis;
  border: 1px solid #DDD;
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  border-radius: 4px;
  -webkit-box-shadow: 0 3px 2px  rgba(0, 0, 0,0.8);
  -moz-box-shadow: 0 3px 2px rgba(0, 0, 0, 0.8);
   box-shadow: 0 3px 2px rgba(0, 0, 0, 0.8);
}
.thumbnails li{
	margin-left:2%;
}

.room_list h5{
	font-size:16px;
	border-bottom:1px solid #ccc;
	padding:5px;
}

.room_list a:hover {
	cursor: pointer;
	color:#ff0033;
  text-decoration:none;
}

.room_list .like{
	float:right;
  margin-right:2px;
  font-size:18px;
  color:#646464;
}

.room_list .left{
  float:left;
  margin-left:4px;
  font-size:14px;
  color:#646464;
  font-weight: bold;
}

.room_list .right{
   position:absolute;
   margin-left: 83%;
   color:#646464;
   font-size:14px;
   font-weight: bold;
}


.room_list .desc{
	padding: 4px;
	font-size: 14px;
	height: 97px;
}

.thumbnails{
	padding-left: 8%;
}


.pagination{
	text-align: center;
}

#myCanvas{
	float: left;
	top: 0px;
	margin-top: 0px;
	background-color: #fff;
	border-radius: 50px;
}

.error-message{
	float: left;
	width: 420px;
	margin-left: -230px;
	display: none;
}

.error-message p {
	border-radius: 10px;
	height: 20px;
}

.error-message .close{
	padding-right: 10px;
	padding-top: 10px;
	cursor: pointer;
}